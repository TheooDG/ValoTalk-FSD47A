{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Utilisateurs</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Nom d'utilisateur</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('admin_user_edit', { id: user.id }) }}">Modifier</a>
                    <a href="{{ path('admin_user_delete', { id: user.id }) }}" onclick="return confirm('Voulez-vous vraiment supprimer ce compte ?')">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('admin_user_create') }}">Cr√©er un nouvel utilisateur</a>
{% endblock %}
